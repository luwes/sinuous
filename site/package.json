{
  "name": "sinuous-site",
  "description": "A project bootstrap for Eleventy sites. With pipelines for PostCSS, JavaScript, and serverless functions",
  "version": "1.0.0",
  "author": "Wesley Luyten",
  "private": true,
  "scripts": {
    "css:dev": "postcss src/css/styles.css --dir public/css -w",
    "css:prod": "cross-env NODE_ENV=prod postcss src/css/styles.css --dir public/css",
    "js:dev": "rollup -wc --silent",
    "js:prod": "rollup -c --silent",
    "dev": "cross-env NODE_ENV=dev run-p js:dev serve css:dev",
    "serve": "eleventy --serve",
    "build": "cross-env NODE_ENV=prod run-s js:prod eleventy css:prod",
    "eleventy": "eleventy",
    "seed": "cross-env NODE_ENV=seed eleventy",
    "start": "npm run dev"
  },
  "dependencies": {
    "sinuous": "0.28.1",
    "tailwindcss": "1.4.6"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-cache-assets": "^2.0.3",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "autoprefixer": "^9.8.5",
    "babel-eslint": "^10.1.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "compression": "^1.7.4",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "dotenv": "^8.0.0",
    "eslint": "^7.4.0",
    "eslint-plugin-import": "^2.22.0",
    "gzip-size": "^5.1.1",
    "html-minifier": "^4.0.0",
    "js-yaml": "^3.14.0",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-scss": "^2.1.1",
    "pretty-bytes": "^5.3.0",
    "rollup": "^2.21.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-terser": "^6.1.0",
    "terser": "^4.8.0"
  }
}
